<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Bayojid AI Desktop</title>
</head>
<body>
  <h1>Bayojid AI Chat</h1>
  <input type="text" id="message" placeholder="Type message">
  <button id="sendBtn">Send</button>
  <div id="chatBox"></div>

  <script>
    const chatBox = document.getElementById("chatBox")
    const messageInput = document.getElementById("message")
    const sendBtn = document.getElementById("sendBtn")
    const API_URL = "https://src-4-a535.onrender.com/chat" // তোমার backend

    sendBtn.addEventListener("click", async () => {
      const message = messageInput.value.trim()
      if (!message) return
      appendMessage("You", message)
      messageInput.value = ""

      try {
        const res = await axios.post(API_URL, { username: "free_user", message })
        const data = res.data
        if (data.reply) appendMessage("AI", data.reply)
        else if (data.error) appendMessage("System", data.error)
      } catch {
        appendMessage("System", "Error connecting to backend")
      }
    })

    function appendMessage(sender, text) {
      const div = document.createElement("div")
      div.innerHTML = `<strong>${sender}:</strong> ${text}`
      chatBox.appendChild(div)
    }
  </script>
  <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
</body>
</html>